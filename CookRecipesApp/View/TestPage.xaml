<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:CookRecipesApp.ViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="CookRecipesApp.View.TestPage"
             x:DataType="viewmodel:TestViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="Green"
             Title="TestPage">
    <VerticalStackLayout>
        
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            TextColor="Black"/>

        <Label Text="{Binding UserName}"/>

        <Button Text="Login" Command="{Binding LoginBtnCommand}"></Button>
        <Button Text="Debug print all users" Command="{Binding DebugDbBtnCommand}"></Button>
        <Button Text="RecepiesMainPage" Command="{Binding RecepiesMainPageBtnCommand}"/>
        <Button Text="Debug print all categories" Command="{Binding CategoryDbBtnCommand}"/>
        <Button Text="Debug print all recepies" Command="{Binding RecepieDbBtnCommand}"/>
        <Button Text="Test recepiedetail page" Command="{Binding RecepieDetailPageBtnCommand}"></Button>
        <Button Text="Logout" Command="{Binding LogoutBtnCommand}"></Button>

    </VerticalStackLayout>
</ContentPage>