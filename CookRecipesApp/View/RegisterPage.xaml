<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:CookRecipesApp.ViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="viewmodel:RegisterViewModel"
             x:Class="CookRecipesApp.View.RegisterPage"
             Shell.NavBarIsVisible="False"
             Title="RegisterPage">
    
    <Grid
        RowDefinitions="220,Auto, Auto, *"
        ColumnDefinitions="*,Auto,*"
        BackgroundColor="#1D1F1D">

        <VerticalStackLayout
            Grid.Row="0"
            Grid.Column="1"
            VerticalOptions="End"
            MinimumWidthRequest="320"
            Margin="0,0,0,60">
            <Label Text="Register" FontFamily="Alegreya" FontSize="40" Padding="0, 0, 15, 0" TextColor="{StaticResource Porcelain}" HorizontalOptions="Center"></Label>
            <Label
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Text="Let's start cooking!"
                TextColor="#A0A0A0"
                FontSize="23"
                FontAttributes="Bold,Italic"
                FontFamily="Alegreya"
                Padding="0, 0, 0, 0"/>
        </VerticalStackLayout>

        <VerticalStackLayout
                Grid.Row="1"
                Grid.Column="1"
                Padding="0, 15">
            <Label Text="Name:" TextColor="{StaticResource Porcelain}"/>
            <Border
                Padding="0"
                Margin="0, 3, 0, 10"
                StrokeShape="RoundRectangle, 8"
                BackgroundColor="#212121"
                Stroke="Transparent"
                >
                <Entry TextColor="{StaticResource Porcelain}" FontFamily="Nunito" Text="{Binding NameEntry}"></Entry>
            </Border>
                       
            <Label Text="Surname (optional):" TextColor="{StaticResource Porcelain}"/>
            <Border
                Padding="0"
                Margin="0, 3, 0, 10"
                StrokeShape="RoundRectangle, 8"
                BackgroundColor="#212121"
                Stroke="Transparent"
                >
                <Entry TextColor="{StaticResource Porcelain}" FontFamily="Nunito" Text="{Binding SurnameEntry}"></Entry>
            </Border>
            
            <Label Text="Email:" TextColor="{StaticResource Porcelain}"/>
            <Border
                Padding="0"
                Margin="0, 3, 0, 10"
                StrokeShape="RoundRectangle, 8"
                BackgroundColor="#212121"
                Stroke="Transparent"
                >
                <Entry TextColor="{StaticResource Porcelain}" FontFamily="Nunito" Text="{Binding EmailEntry}" Keyboard="Email"></Entry>
            </Border>
            
            <Label Text="Password:" TextColor="{StaticResource Porcelain}" />
            <Border
                Padding="0"
                Margin="0, 3, 0, 10"
                StrokeShape="RoundRectangle, 8"
                BackgroundColor="#212121"
                Stroke="Transparent"
                >
                <Entry TextColor="{StaticResource Porcelain}" FontFamily="Nunito" IsPassword="true" Text="{Binding Password1}"></Entry>
            </Border>

            <Label Text="Password again:" TextColor="{StaticResource Porcelain}" />
            <Border
                Padding="0"
                Margin="0, 3, 0, 10"
                StrokeShape="RoundRectangle, 8"
                BackgroundColor="#212121"
                Stroke="Transparent"
                >
                <Entry TextColor="{StaticResource Porcelain}" FontFamily="Nunito" IsPassword="true" Text="{Binding Password2}"></Entry>
            </Border>
            <Label Text="{Binding IndicatorText}" TextColor="DarkRed" IsVisible="{Binding IndicatorVisibility}" Margin="0,0,0,5"></Label>
            
            <Button Text="Continue" Margin="5, 0, 5, 0" BorderColor="{StaticResource DarkEvergreen}" BorderWidth="1" Command="{Binding RegisterBtnCommand}" TextColor="{StaticResource Porcelain}" CornerRadius="25"></Button>
            
        </VerticalStackLayout>

        <HorizontalStackLayout
            Grid.Column="1"
            Grid.Row="2"
            HorizontalOptions="Center"
            Padding="5, 0"
            Spacing="20">
            <Button Text="Login to existing account" Background="Transparent" Command="{Binding LoginBtnCommand}"></Button>
        </HorizontalStackLayout>

        <Button 
            Grid.Column="0" 
            Grid.Row="3" 
            Text="Back"
            Margin="10, 0, 0, 10"
            HeightRequest="15"
            WidthRequest="60"
            VerticalOptions="End"
            HorizontalOptions="Start"
            Background="Transparent"
            Command="{Binding BackBtnCommand}"/>
        
        <Button 
            Grid.Column="2" 
            Grid.Row="3" 
            Text="Skip"
            Margin="0, 0, 10, 10"
            HeightRequest="15"
            WidthRequest="60"
            VerticalOptions="End"
            HorizontalOptions="End"
            Background="Transparent"
            Command="{Binding SkipBtnCommand}"/>


    </Grid>
</ContentPage>