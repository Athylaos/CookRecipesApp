<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:CookRecipesApp.ViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="viewmodel:LoginViewModel"
             x:Class="CookRecipesApp.View.LoginPage"
             Shell.NavBarIsVisible="False"
             Title="LoginPage">
    <Grid
        RowDefinitions="Auto"
        BackgroundColor="{StaticResource DarkEvergreen}">
        <Border
            BackgroundColor="{StaticResource Evergreen}"
            Padding="15 20"
            Margin="20,50"
            StrokeShape="Roundrectangle 30"
            Stroke="Black"
            Shadow="5 5 15 Black 0.1">
            <VerticalStackLayout>
                <Label Text="Login" FontFamily="Alegreya" FontSize="30" Padding="0 0 15 0"></Label>
                <Label Text="Email:" TextColor="{StaticResource Porcelain}"/>
                <Entry ></Entry>
                <Label Text="Password:" TextColor="{StaticResource Porcelain}"/>
                <Entry></Entry>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>