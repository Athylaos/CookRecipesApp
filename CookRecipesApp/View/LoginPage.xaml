<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:CookRecipesApp.ViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="viewmodel:LoginViewModel"
             x:Class="CookRecipesApp.View.LoginPage"
             Shell.NavBarIsVisible="False"
             Title="LoginPage">
    <Grid
        RowDefinitions="300,Auto, Auto, *"
        ColumnDefinitions="*,Auto,*"
        BackgroundColor="#1D1F1D">

        <VerticalStackLayout
            Grid.Row="0"
            Grid.Column="1"
            VerticalOptions="End"
            Margin="0,0,0,60">
            <Label Text="Login" FontFamily="Alegreya" FontSize="40" Padding="0, 0, 15, 0" TextColor="{StaticResource Porcelain}" HorizontalOptions="Center"></Label>
            <Label
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Text="Welcome back, Chef!"
                TextColor="#A0A0A0"
                FontSize="23"
                FontAttributes="Bold,Italic"
                FontFamily="Alegreya"
                Padding="0, 0, 0, 0"/>
        </VerticalStackLayout>

        <VerticalStackLayout
                Grid.Row="1"
                Grid.Column="1"
                Padding="0, 15">
            <Label Text="Email:" TextColor="{StaticResource Porcelain}"/>
            <Entry TextColor="{StaticResource Porcelain}" FontFamily="Nunito" Text="{Binding Email}" Margin="0, 3, 0, 10"></Entry>
            <Label Text="Password:" TextColor="{StaticResource Porcelain}" />
            <Entry TextColor="{StaticResource Porcelain}" FontFamily="Nunito" IsPassword="true" Text="{Binding Password}"></Entry>
            <Label Text="{Binding IndicatorText}" TextColor="DarkRed" IsVisible="{Binding IndicatorVisibility}" Margin="0, 3, 0, 10"></Label>
            <Button Text="Continue" Margin="5, 20, 5, 0" BorderColor="{StaticResource DarkEvergreen}" BorderWidth="1" Command="{Binding LoginBtnCommand}" TextColor="{StaticResource Porcelain}" CornerRadius="25"></Button>
        </VerticalStackLayout>
        
        <HorizontalStackLayout
            Grid.Column="1"
            Grid.Row="2"
            HorizontalOptions="Center"
            Padding="5, 0"
            Spacing="20">
            <Button Text="Create Account" Background="Transparent" Command="{Binding CreateAccountBtnCommand}" ></Button>
            <Button Text="Forgot password" Background="Transparent" Command="{Binding ForgotPasswordBtnCommand}"></Button>
        </HorizontalStackLayout>

        <Button 
            Grid.Column="2" 
            Grid.Row="3" 
            Text="Skip"
            Margin="0, -15, 0, 0"
            HeightRequest="15"
            WidthRequest="60"
            VerticalOptions="End"
            HorizontalOptions="End"
            Background="Transparent"
            Command="{Binding SkipBtnCommand}"/>


    </Grid>
</ContentPage>